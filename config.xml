<?xml version='1.0' encoding='utf-8'?>
<widget id="com.coolappz.MeteoMarina" version="0.0.2" android-versionCode="2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MeteoMarina</name>
    <icon src="res/icon.png" />
    <description>
        Meteorología marina para la costa española.
    </description>
    <author email="pglez82@gmail.com" href="https://github.com/pglez82/MeteoMarina">
        Pablo González
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
